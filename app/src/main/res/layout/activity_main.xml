<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <FrameLayout
        android:id="@+id/fl"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#000"/>

    <RadioGroup
        android:id="@+id/rg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <RadioButton
            style="@style/RadioButton"
            android:drawableTop="@drawable/selector_home_bt"
            android:text="首页"/>

        <RadioButton
            style="@style/RadioButton"
            android:drawableTop="@drawable/selector_news_bt"
            android:text="新闻"/>

        <RadioButton
            style="@style/RadioButton"
            android:drawableTop="@drawable/selector_service_bt"
            android:text="服务"/>

        <RadioButton
            style="@style/RadioButton"
            android:drawableTop="@drawable/selector_setting_bt"
            android:text="设置"/>
    </RadioGroup>
</LinearLayout>
